<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/len_2"
    android:layout_marginBottom="@dimen/len_2"
    android:background="@color/white"
    android:paddingTop="@dimen/len_12"
    android:paddingBottom="@dimen/len_12"
    android:paddingStart="@dimen/len_16"
    android:paddingEnd="@dimen/len_16"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="horizontal">

    <com.delong.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/default_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize" />
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="0dp"
          android:layout_gravity="start|center_vertical"
          android:layout_height="@dimen/len_24"
          android:layout_weight="1"
          android:layout_marginStart="@dimen/len_12"
          android:ellipsize="end"
          android:gravity="center_vertical"
          android:textAppearance="@style/TextAppearance.Title"
          android:textSize="@dimen/fontNameSize"
          android:textColor="@color/textAccent"
          tools:text="@string/app_name"
          />

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/im_follow"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sel_btn_bg_accent_4"
            android:layout_width="@dimen/len_52"
            android:layout_height="@dimen/len_28"
            android:src="@drawable/sel_opt_done_add"
            />



</LinearLayout>
