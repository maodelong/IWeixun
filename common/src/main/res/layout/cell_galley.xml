<?xml version="1.0" encoding="utf-8"?>
<com.delong.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/view_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_112"
        />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:button="@drawable/sel_cb_circle"
        android:clickable="false"
        android:padding="0dp"
        android:enabled="false"
        android:layout_gravity="end"
        android:layout_margin="@dimen/len_2"
        android:visibility="gone"
        android:buttonTint="@color/white"
        tools:visibility="visible"
        />

</com.delong.common.widget.SquareLayout>
